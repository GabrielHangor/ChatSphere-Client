{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "../frontend/src/env.d.ts",
    "../frontend/src/**/*",
    "../frontend/src/**/*.ts",
    "../frontend/src/**/*.vue"
  ],
  "compilerOptions": {
    "target": "esnext",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "types": ["node", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../frontend/src/*"]
    },
    "lib": ["esnext", "dom"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
