{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["src/env.d.ts", "src/**/*", "src/**/*.ts", "src/**/*.vue"],
  "compilerOptions": {
    "target": "esnext",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "types": ["node", "vite/client", "naive-ui/volar"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
